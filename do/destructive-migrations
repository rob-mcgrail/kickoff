require 'rubygems'
require 'app.rb'
require 'trollop'

opts = Trollop::options do
  opt :environment, "Select environment", :default => 'development'
end

puts 'Destructively update database? Y/N'

if $stdin.gets.chomp.downcase == 'y'
  puts 'Destructively updating databases...'

  set :environment, opts[:environment].to_sym

  puts 'Updating database ' + settings.db

  DataMapper.auto_migrate!
end



