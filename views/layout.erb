</head>

<body>

  <div class="container">
    <div class="header">
        <%= erb :_header %>
    </div>

    <div class="flashes">
        <%= erb :_flashes %>
    </div>

    <div class="content">
        <%= yield if block_given? %>
    </div>

    <footer>
        <%= erb :_footer %>
    </footer>
  </div> <!-- eo #container -->


  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js"></script>
  <script>window.jQuery || document.write("<script src='/js/libs/jquery-1.7.1.min.js'>\x3C/script>")</script>

  <%= javascript_tag "/js/libs/prettify/prettify.js" %>
  <script>prettyPrint();</script>

  <%= javascript_tag "/js/libs/bootstrap/transition.js" %>
  <%= javascript_tag "/js/libs/bootstrap/alert.js" %>
  <%= javascript_tag "/js/libs/bootstrap/modal.js" %>
  <%= javascript_tag "/js/libs/bootstrap/dropdown.js" %>
  <%= javascript_tag "/js/libs/bootstrap/scrollspy.js" %>
  <%= javascript_tag "/js/libs/bootstrap/tab.js" %>
  <%= javascript_tag "/js/libs/bootstrap/tooltip.js" %>
  <%= javascript_tag "/js/libs/bootstrap/popover.js" %>
  <%= javascript_tag "/js/libs/bootstrap/button.js" %>
  <%= javascript_tag "/js/libs/bootstrap/collapse.js" %>
  <%= javascript_tag "/js/libs/bootstrap/carousel.js" %>
  <%= javascript_tag "/js/libs/bootstrap/typeahead.js" %>

  <%= javascript_tag "/js/script.js" %>
